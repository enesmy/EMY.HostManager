@model EMY.HostManager.Entities.Template

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1  class="mt-4">Details</h1>

<div>
    <h4>Template</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            <i class="lni lni-line-dashed"></i>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TemplateID)
        </dd>
        <dt class="col-sm-2">
            Template Name
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TemplateName)
        </dd>
        <dt class="col-sm-2">
           Template Code
        </dt>
        <dd class="col-sm-10">
           @Html.Raw( Model.TemplateCode.Replace("\n","<br />"))
        </dd>

    </dl>
</div>

<div>
    @if (User.IsInRole("TemplateUp") || User.IsInRole("AdminFull") || User.IsInRole("TemplateFull"))
    {
        <a href="/Template/Edit?TemplateID=@Model.TemplateID" class="btn btn-light">
            <i class="lni lni-slice"> Edit</i>
        </a>
    }
    <a asp-action="Index" class="btn btn-sm btn-secondary"><i class="lni lni-chevron-left-circle"></i> Back to List</a>
</div>
