@model EMY.HostManager.Entities.Template

@{
    ViewData["Title"] = "Delete " + Model.TemplateName;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="mt-4">Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Template</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            <i class="lni lni-line-dashed"></i>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TemplateID)
        </dd>
        <dt class="col-sm-2">
            Template Name
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TemplateName)
        </dd>
        <dt class="col-sm-2">
            Template Code
        </dt>
        <dd class="col-sm-10">
            @Html.Raw(Model.TemplateCode.Replace("\n", "<br />"))
        </dd>

    </dl>
</div>

<div>
    @if (User.IsInRole("TemplateDel") || User.IsInRole("AdminFull") || User.IsInRole("TemplateFull"))
    {
        <form action="/Template/DeleteConfirmed" method="post">
            @Html.HiddenFor(model => model.TemplateID)
            @Html.AntiForgeryToken()

            <button type="submit" class="btn btn-sm btn-danger"><i class="lni lni-remove-file"></i> Delete Confirm</button>
            <a asp-action="Index" class="btn btn-sm btn-secondary"><i class="lni lni-chevron-left-circle"></i> Back to List</a>
        </form>

    }

</div>
