@model EMY.HostManager.Entities.DomainInformation

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="mt-4">Details</h1>

<div>
    <h4>Domain Informations</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            <i class="lni lni-line-dashed"></i>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DomainInformationID)
        </dd>
        <dt class="col-sm-2">
            Domain Name
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DomainName)
        </dd>
        <dt class="col-sm-2">
            Domain Adress
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DomainAdress)
        </dd>

    </dl>
</div>
<div>
    @if (User.IsInRole("DomainUp") || User.IsInRole("AdminFull") || User.IsInRole("DomainFull"))
    {
        <a href="/Domain/Edit?ServerInformationID=@Model.DomainInformationID" class="btn btn-light">
            <i class="lni lni-slice"> Edit</i>
        </a>
    }
    <a asp-action="Index" class="btn btn-sm btn-secondary"><i class="lni lni-chevron-left-circle"></i> Back to List</a>
</div>
