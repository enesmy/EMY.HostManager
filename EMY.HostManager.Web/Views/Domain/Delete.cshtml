@model EMY.HostManager.Entities.DomainInformation

@{
    ViewData["Title"] = "Delete " + Model.DomainName;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="mt-4">Delete</h1>

<h3>Are you sure you want to delete this?</h3>

<div>
    <h4>Domain Informations</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            <i class="lni lni-line-dashed"></i>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DomainInformationID)
        </dd>
        <dt class="col-sm-2">
            Domain Name
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DomainName)
        </dd>
        <dt class="col-sm-2">
            Domain Adress
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DomainAdress)
        </dd>

    </dl>
</div>

<div>
    @if (User.IsInRole("DomainDel") || User.IsInRole("AdminFull") || User.IsInRole("DomainFull"))
    {
        <form action="/Domain/DeleteConfirmed" method="post">
            @Html.HiddenFor(model => model.DomainInformationID)
            @Html.AntiForgeryToken()

            <button type="submit" class="btn btn-sm btn-danger"><i class="lni lni-remove-file"></i> Delete Confirm</button>
            <a asp-action="Index" class="btn btn-sm btn-secondary"><i class="lni lni-chevron-left-circle"></i> Back to List</a>
        </form>

    }

</div>
