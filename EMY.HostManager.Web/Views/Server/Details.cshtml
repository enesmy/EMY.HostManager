@model EMY.HostManager.Entities.ServerInformation

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1  class="mt-4">Details</h1>

<div>
    <h4>Server Informations</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            <i class="lni lni-line-dashed"></i>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ServerInformationID)
        </dd>
        <dt class="col-sm-2">
            Server Name
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ServerName)
        </dd>
        <dt class="col-sm-2">
            Server Type
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ServerType)
        </dd>
        <dt class="col-sm-2">
            Server Adress
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ServerAdress)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Port)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Port)
        </dd>
        <dt class="col-sm-2">
            User Name
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UserName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Password)
        </dt>
        <dd class="col-sm-10">
            @if (!string.IsNullOrEmpty(Model.Password))
                @("".PadLeft(Model.Password.Length,'•'))
        </dd>
    </dl>
</div>
<div>
    @if (User.IsInRole("ServerUp") || User.IsInRole("AdminFull") || User.IsInRole("ServerFull"))
    {
        <a href="/Server/Edit?ServerInformationID=@Model.ServerInformationID" class="btn btn-light">
            <i class="lni lni-slice"> Edit</i>
        </a>
    }
    <a asp-action="Index" class="btn btn-sm btn-secondary"><i class="lni lni-chevron-left-circle"></i> Back to List</a>
</div>
