@model EMY.HostManager.Entities.ServerInformation

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="alert alert-info">
    <h1  class="mt-4">
        @if (Model.ServerInformationID == 0)
        {
            @Html.Raw("Create")
            ViewData["Title"] = "Create Server Information";
        }
        else
        {
            @Html.Raw("Edit")
            ViewData["Title"] = "Edit Server Information";
        }
    </h1>

    <h4>Server Information</h4>
    <hr />
</div>

<div class="alert alert-success">
    <form asp-action="Save">
        @Html.HiddenFor(o => o.ServerInformationID)
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="row">

            <div class="col-lg-4 col-md-6 col-sm-12">
                <div class="form-group">
                    <label asp-for="ServerName" class="control-label">Server Name</label>
                    <input asp-for="ServerName" min="3" class="form-control" />
                    <span asp-validation-for="ServerName" class="text-danger"></span>
                </div>
            </div>
            <div class="col-lg-4 col-md-6 col-sm-12">
                <div class="form-group">
                    <label asp-for="ServerType" class="control-label">Server Type</label>
                    <select class="form-control" asp-for="ServerType" asp-items="@Html.GetEnumSelectList<ServerTypes>()"></select>
                    <span asp-validation-for="ServerType" class="text-danger"></span>
                </div>
            </div>
            <div class="col-lg-4 col-md-6 col-sm-12">
                <div class="form-group">
                    <label asp-for="ServerAdress" class="control-label">Server Adress</label>
                    <input asp-for="ServerAdress" min="3" class="form-control" />
                    <span asp-validation-for="ServerAdress" class="text-danger"></span>
                </div>
            </div>
            <div class="col-lg-4 col-md-6 col-sm-12">
                <div class="form-group">
                    <label asp-for="Port" class="control-label"></label>
                    <input asp-for="Port" class="form-control" />
                    <span asp-validation-for="Port" class="text-danger"></span>
                </div>
            </div>
            <div class="col-lg-4 col-md-6 col-sm-12">
                <div class="form-group">
                    <label asp-for="UserName" class="control-label">User Name</label>
                    <input asp-for="UserName" min="1" class="form-control" />
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>
            </div>
            <div class="col-lg-4 col-md-6 col-sm-12">
                <div class="form-group">
                    <label asp-for="Password" class="control-label"></label>
                    <input asp-for="Password" type="password" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
            </div>
            @if ((bool)ViewBag.Error)
            {
                <hr />
                <div class="alert alert-danger">
                    @Html.Raw(ViewBag.ErrorMessage)
                </div>
                
            } 
            <div class="col-12">
                <div class="form-group">
                    @if (Model.ServerInformationID == 0)
                    {
                        <button type="submit" class="btn btn-primary"><i class="lni lni-circle-plus"></i> Create</button>
                    }
                    else
                    {
                        <button type="submit" class="btn btn-success"><i class="lni lni-save"></i> Save Changes</button>
                    }
                </div>

            </div>
        </div>
    </form>
</div>

<div>
    <a asp-action="Index" class="btn btn-sm btn-secondary"><i class="lni lni-chevron-left-circle"></i> Back to List</a>
</div>

